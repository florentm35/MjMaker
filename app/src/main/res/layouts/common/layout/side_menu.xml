<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentMenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/han_purple"
    android:orientation="vertical">



    <Button
        android:id="@+id/menu_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:text="@string/menu_game_management"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/menu_scenario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:text="@string/menu_scenario_manager"
        android:textColor="@color/white" />
    <Button
        android:id="@+id/menu_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:text="@string/menu_manage_map"
        android:textColor="@color/white" />
    <Button
        android:id="@+id/menu_entity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:text="@string/menu_manage_entity"
        android:textColor="@color/white" />

</LinearLayout>